<% content_for :header_actions do %>
  <a href="<%= engine_llm.settings_path %>" class="text-sm text-gray-500 hover:text-gray-700">Settings</a>
<% end %>

<div class="max-w-4xl mx-auto py-6 px-4">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Conversations</h1>
    <%= button_to "New Chat", engine_llm.conversations_path, method: :post, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-md hover:bg-primary-700" %>
  </div>

  <% if @conversations.any? %>
    <div class="space-y-3">
      <% @conversations.each do |conversation| %>
        <%= ds_card do %>
          <div class="flex justify-between items-center">
            <div>
              <a href="<%= engine_llm.conversation_path(conversation) %>" class="text-base font-medium text-gray-900 hover:text-primary-600">
                <%= conversation.title %>
              </a>
              <div class="mt-1 text-sm text-gray-500">
                <%= ds_badge label: (conversation.model&.split(":")&.last || "default"), color: :gray %>
                <span class="ml-2"><%= conversation.read_attribute(:transcript)&.size || 0 %> messages</span>
                <span class="ml-2"><%= time_ago_in_words(conversation.updated_at) %> ago</span>
              </div>
            </div>
            <%= button_to "Delete", engine_llm.conversation_path(conversation), method: :delete, class: "text-sm text-red-600 hover:text-red-800", form: { style: "display:inline" } %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <%= ds_empty_state title: "No conversations yet" do %>
      <p class="mt-2">
        <%= button_to "Start your first conversation", engine_llm.conversations_path, method: :post, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-md hover:bg-primary-700" %>
      </p>
    <% end %>
  <% end %>
</div>
